@page
@model LoginModel

@{
    ViewData["Title"] = "Prijava";
}
<div class="page dark-mode">
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Upišite podatke računa.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Potvrdi</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./Register" style="color:#26c237" asp-route-returnUrl="@Model.ReturnUrl">Registriraj se kao novi korisnik</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
